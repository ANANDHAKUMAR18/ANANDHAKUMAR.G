@{
    ViewData["Title"] = "Create";
}
@using (var form = Html.BeginForm("Insert", "Home", FormMethod.Post))
{

                <table>
                    <tr>
                        <th>New Customer</th>
                    </tr>
                    <tr>
                        <td>CustomerName:</td>
                        <td>@Html.TextBoxFor(m => m.CustomerName)</td>
                    </tr>
                    <tr>
                        <td>EmailID:</td>
                        <td>@Html.TextBoxFor(m => m.EmailID)</td>
                    </tr>
                    <tr>
                        <td>MobileNo:</td>
